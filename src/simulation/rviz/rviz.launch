<launch>

	<group ns = "rviz">
		<param name = "robot_description" command = "$(find xacro)/xacro $(find simulation)/rviz/model.urdf"/>
		<node name = "robot_state_publisher" pkg = "robot_state_publisher" type = "robot_state_publisher">
			<param name = "robot_description" command = "$(find xacro)/xacro $(find simulation)/rviz/model.urdf"/>
		</node>
		<node name = "rviz" pkg = "rviz" type = "rviz" args = "-d $(find simulation)/rviz/config.rviz"
		launch-prefix = "bash -c 'sleep 40; $0 $@' "/>
		<node name = "tf2pub" pkg = "simulation" type = "tf2pub.py" output = "screen"/>
	</group>

</launch>

