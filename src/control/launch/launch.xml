<launch>

    <!-- Parameters -->

    <arg name = "margin" default = "0.2"/>
    <arg name = "updateRate" default = "20.0"/>
    <arg name = "level" default = "1.5"/>

    <!-- Launch simulation -->

    <include file = "$(find px4)/launch/mavros_posix_sitl.launch"/>
    <node name = "aircontrol" pkg = "control" type = "px4pub" output = "screen" required = "true"
    args = "$(arg margin) $(arg updateRate) $(arg level)"/>

</launch>

